<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image_view_project_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The App Title"
            android:layout_toRightOf="@+id/image_view_project_icon"
            android:id="@+id/text_view_project_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del Proyecto"
            android:layout_toEndOf="@+id/image_view_project_icon"
            android:layout_below="@+id/text_view_project_title"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>